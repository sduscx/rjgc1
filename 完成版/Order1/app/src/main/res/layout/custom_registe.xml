<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.order1.Customer.LoginActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/welcome"
    android:textSize="40dp"
    android:textColor="#fcf2ff"
    android:textStyle="normal"
    android:gravity="center"
    android:layout_marginTop="60dp"/>


    <Button
        android:id="@+id/registe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#fefefd"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/button_register"
        android:layout_below="@+id/text_registe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />


    <LinearLayout
        android:id="@+id/text_registe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text2_registe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="140dp"
      >

            <EditText
                android:id="@+id/registe_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text2"
                android:layout_marginTop="49dp"
                android:hint="Phone Number:"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text3_registe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/text2_registe">

            <EditText
                android:id="@+id/registe_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_phonenumber"
                android:layout_marginTop="58dp"
                android:hint="Password:"
                android:textColor="#bbff00"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text4_registe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/text2_registe">

            <EditText
                android:id="@+id/registe_password_again"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_phonenumber"
                android:layout_marginTop="58dp"
                android:hint="Password:(Again)"
                android:textColor="#bbff00"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</RelativeLayout>
