<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/diah_bad_linear"
        android:visibility="gone">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dish_bad_grid"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginLeft="20dp"
       >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_bad1"
            android:text="有杂物"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_bad2"
            android:layout_marginLeft="10dp"
            android:text="不新鲜"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_bad3"
            android:layout_marginLeft="10dp"
            android:text="分量一般"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_bad4"
            android:text="味道一般"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_bad5"
            android:text="不实惠"/>
    </GridLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/ev_bad_dish"
            android:layout_marginLeft="20dp"
            android:hint="说说哪里不满意，帮大家改进..."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/diah_good_linear">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dish_good_grid"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginLeft="20dp"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_good1"
            android:text="干净卫生"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_good2"
            android:layout_marginLeft="10dp"
            android:text="食材新鲜"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_good3"
            android:layout_marginLeft="10dp"
            android:text="分量足"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_good4"
            android:text="味道好"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish_good5"
            android:text="很实惠"/>
    </GridLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/ev_good_dish"
            android:layout_marginLeft="20dp"
            android:hint="说说哪里满意，让大家选择..."/>
        </LinearLayout>
</LinearLayout>