<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table_linear_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="餐桌详情"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#c9cbcb"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/table_linear_number"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#c9cbcb"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/table_peo_number"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#c9cbcb"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/table_info"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#c9cbcb"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/table_all_money"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="#c9cbcb"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/table_password"/>



    </LinearLayout>
</LinearLayout>